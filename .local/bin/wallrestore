#!/usr/bin/env bash
# Restore last Pywal theme and wallpaper
if ! pgrep -x "swww-daemon" >/dev/null; then
  swww-daemon &
  sleep 0.5
fi

# restore wallpaper from wal cache
lastwall=$(cat ~/.cache/wal/wal)
ln -sf "$lastwall" ~/.cache/wal/current_wallpaper
swww img "$lastwall" --transition-type any
wal -R
pywalfox update
walcord
~/.local/bin/wal-mako
pkill -SIGUSR2 waybar || true

